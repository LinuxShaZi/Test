{
	// See https://go.microsoft.com/fwlink/?LinkId=733558 
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "g++",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"-Wall",
				"${file}",
				"-o",
				"${workspaceRoot}/build/${fileBasenameNoExtension}",
				"-std=c++11"
			],
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}